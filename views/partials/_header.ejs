<header>
  <style>
    .button {
      display: inline-block;
      border-radius: 4px;
      border: 2px solid black;
      color: black;
      text-align: center;
      width: 100px;
      transition: all 0.5s;
      transition-duration: 0.4s;
      cursor: pointer;
      margin: 5px;
    }
    
    .button span {
      cursor: pointer;
      display: inline-block;
      position: relative;
      transition: 0.5s;
    }
    
    .button span:after {
      content: '\00bb';
      position: absolute;
      opacity: 0;
      top: 0;
      right: -20px;
      transition: 0.5s;
    }
    
    .button:hover span {
      padding-right: 25px;
    }
    
    .button:hover span:after {
      opacity: 1;
      right: 0;
    }
    </style>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if(user) { %>
        <form method="post" action="/logout">Logged In As: <%= user.email %><button class="button"> <span>Logout</span>
        </button></form>
      <% } else { %>
        <a href="/login"><button class="button"><span>Login</span>
        </button></form></a>
        <a href="/register"><button class="button"><span>register</span>
        </button></form></a>
      <% } %>
      </div>
  </nav>
</header>
